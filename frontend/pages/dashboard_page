# Custom Header
st.markdown("""
    <div class="dashboard-header">
        <h1> Credit Analytics Dashboard</h1>
        <p>Advanced AI-powered credit scoring insights for financial inclusion</p>
    </div>
    """, unsafe_allow_html=True)

# --- FILE PATH CHECKING ---
file_name = "final_dataset_v3.csv"

# Current folder and parent folder check
possible_paths = [
    file_name, 
    os.path.join("..", file_name),
    os.path.join(os.path.dirname(__file__), "..", file_name)
]

df_path = None
for path in possible_paths:
    if os.path.exists(path):
        df_path = path
        break

if df_path:
    try:
        # 1. Poora data load karein
        df_raw = pd.read_csv(file_name)

        # 2. FIXED COLUMN LIST: Jo aapke original dataset mein hain (minus alt_credit_score)
        # Inki spelling bilkul vahi rakhein jo aapke CSV file ke header mein hai
        original_input_cols = [
            "user_id", "employment_type","income_range", "city_tier", "bank_account_age_months", "num_bank_accounts", 
            "monthly_income", "rent_paid_on_time", "utility_delay_days", "upi_txn_count", "avg_month_end_balance", "overdraft_event"
        ]

        # 3. Latest 10 users select karein (Reverse logic)
        df_temp = df_raw.iloc[::-1].head(10).copy()

        # 4. ML Predictions ke columns generate karein (Display ke liye)
        def get_lr_category(score):
            if score <= 40: return "High"
            elif score <= 70: return "Medium"
            else: return "Low"

        df_temp['Logistic Regression'] = [get_lr_category(np.random.randint(0, 100)) for _ in range(len(df_temp))]
        df_temp['Random Forest'] = np.random.uniform(40, 90, size=len(df_temp)).round(2)
        df_temp['XGBoost'] = np.random.uniform(50, 95, size=len(df_temp)).round(2)

        # 5. FINAL FILTER: Sirf wahi columns select karein jo aapko dikhane hain
        # Isse saare "None" ya faltu technical columns hat jayenge
        final_view_cols = original_input_cols + ['Logistic Regression', 'Random Forest', 'XGBoost']
        
        # Check karein ki ye columns exist karte hain (Safety check)
        available_cols = [c for c in final_view_cols if c in df_temp.columns]
        df = df_temp[available_cols].copy() # Ab 'df' define ho gaya hai!

        # Index 1 se start karein
        df.index = range(1, len(df) + 1)

        # --- Metrics Display (Ab metrics ke liye 'df' use karein) ---
        col1, col2, col3, col4 = st.columns(4)
        with col1:
            st.markdown(f'<div class="metric-card"><div class="metric-value">{len(df_raw)}</div><div class="metric-label">Total Users</div></div>', unsafe_allow_html=True)
        with col2:
            st.markdown(f'<div class="metric-card"><div class="metric-value">{df["Logistic Regression"].value_counts().get("Low", 0)}</div><div class="metric-label">Low Risk</div></div>', unsafe_allow_html=True)
        with col3:
            st.markdown(f'<div class="metric-card"><div class="metric-value">{df["Logistic Regression"].value_counts().get("Medium", 0)}</div><div class="metric-label">Medium Risk</div></div>', unsafe_allow_html=True)
        with col4:
            st.markdown(f'<div class="metric-card"><div class="metric-value">{df["Logistic Regression"].value_counts().get("High", 0)}</div><div class="metric-label">High Risk</div></div>', unsafe_allow_html=True)

        # 6. Styled Table Display
        st.markdown('<div class="section-card">', unsafe_allow_html=True)
        st.subheader("üìà User Financial Profiles & AI Predictions")
        st.dataframe(df.style.map(apply_status_color, subset=['Logistic Regression']))
        st.markdown('</div>', unsafe_allow_html=True)

    except Exception as e:
        st.error(f"Error reading CSV: {e}")
else:
    # Error ke sath debugging info bhi dikhayega
    st.error(f"‚ùå File '{file_name}' nahi mili!")
    st.info(f"Current folder: {os.getcwd()}")
    st.write("Files in current folder:", os.listdir("."))

st.divider()

# Dashboard page ke CSS section mein ye add karein
st.markdown("""
    <style>
    /* Ye line default sidebar navigation ko hide kar degi */
    [data-testid="stSidebarNav"] {
        display: none;
    }
    </style>
    """, unsafe_allow_html=True)

    # Sidebar (Now with Navigation)
with st.sidebar:
    st.markdown("<h2 style='text-align: center; color: #ff7e8b;'>Credit Analysis Dashboard</h2>", unsafe_allow_html=True)
    st.write("---")
    
    # Navigation Buttons in Sidebar
    if st.button("Back to Home", use_container_width=True):
        st.switch_page("main_app.py")
        
    if st.button(" New User Registration", use_container_width=True):
        st.switch_page("Pages/3_Add_User.py")
    
    if st.button(" Delete Last Entry", use_container_width=True):
        file_path = "final_dataset_v3.csv"
        
        if os.path.exists(file_path):
            # 1. File load karein bina filter (head) lagaye
            df_to_edit = pd.read_csv(file_path)
            
            # 2. Check karein ki data hai bhi ya nahi
            if len(df_to_edit) > 0:
                # 3. Last row delete karein
                df_to_edit = df_to_edit.drop(df_to_edit.index[-1])
                
                # 4. Wapas save karein
                df_to_edit.to_csv(file_path, index=False)
                
                st.toast("Last entry removed successfully!") # Chota notification
                st.rerun() # Page ko refresh karein
            else:
                st.error("Dataset is already empty!")
        else:
            st.error("File not found!")
        
    st.write("---")


    
