import streamlit as st
import pandas as pd
import numpy as np
import os

st.set_page_config(page_title="Credit Analytics Dashboard", layout="wide")

# Sabse upar, imports ke niche ye function define karein
def apply_status_color(val):
    if val == "High": return "background-color: #ff6b6b; color: white; font-weight: bold;"
    elif val == "Medium": return "background-color: #ffd93d; color: black; font-weight: bold;"
    elif val == "Low": return "background-color: #6bcf7f; color: white; font-weight: bold;"
    return ""
# Modern CSS Styling inspired by e-commerce sites like Flipkart/Myntra
st.markdown("""
    <style>

    /* 1. Sidebar ka background color change karne ke liye */
    [data-testid="stSidebar"] {
        background-color: #001E3C !important;
    }

    /* 2. Sidebar ke andar ke text aur buttons ko style karne ke liye */
    [data-testid="stSidebar"] h2 {
        color: #ffc75f !important; /* Header color matching your dashboard */
    }
    
    [data-testid="stSidebar"] hr {
        border-color: #ff7e8b !important; /* Divider color */
    }
    [data-testid="stSidebar"] .stButton button {
        background: linear-gradient(135deg, #ff7e8b 0%, #ffc75f 100%) !important;
        color: white !important;
        border-radius: 10px !important;
        font-weight: bold !important;
    }
    .stApp {
        background: linear-gradient(rgba(255, 255, 255, 0.93), rgba(255, 255, 255, 0.93)), 
                    url("https://images.unsplash.com/photo-1550751827-4bd374c3f58b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80");
        background-size: cover;
        background-attachment: fixed;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .dashboard-header {
        background: linear-gradient(135deg, #ff7e8b 0%, #ffc75f 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 8px 32px rgba(255, 126, 139, 0.3);
    }
    .dashboard-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    .section-card {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        margin: 20px 0;
        border-left: 5px solid #ff7e8b;
    }
    .stDataFrame {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .stButton button {
        background: linear-gradient(135deg, #ff7e8b 0%, #ffc75f 100%);
        color: white;
